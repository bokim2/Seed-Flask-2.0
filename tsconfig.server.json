{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "src"]
}
