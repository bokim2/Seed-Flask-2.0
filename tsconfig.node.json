{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist/server"
  },
  "include": [
    "server/**/*",
    "./vite.config.ts" // Adjust path as necessary
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
